{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"removeComments": true,
		"moduleResolution": "Node",
		"sourceMap": true,
		"lib": ["DOM", "ES2020"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
